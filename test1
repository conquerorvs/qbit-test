        // Simple JavaScript for dynamic content loading
        document.addEventListener('DOMContentLoaded', (event) => {
            // You can add more dynamic functionality here
            console.log('DOM fully loaded and parsed');
        });

        // Example of how you might load job listings dynamically
        function loadJobs() {
            // This would typically involve an API call
            const jobs = [
                {title: "Quantum Algorithm Developer", company: "QuantumTech Inc."},
                {title: "Quantum Hardware Engineer", company: "Q-Systems"},
                {title: "Quantum Cryptography Specialist", company: "SecureQuantum Ltd"}
            ];

            const jobList = document.getElementById('job-list');
            jobs.forEach(job => {
                const li = document.createElement('li');
                li.textContent = `${job.title} at ${job.company}`;
                jobList.appendChild(li);
            });
        }

